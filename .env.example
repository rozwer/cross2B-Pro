# =============================================================================
# SEO Article Generator - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the required values
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys (Step 1)
# -----------------------------------------------------------------------------

# Gemini API
GEMINI_API_KEY=

# OpenAI API
OPENAI_API_KEY=

# Anthropic API
ANTHROPIC_API_KEY=

# Nano Banana (optional - image generation)
NANO_BANANA_API_KEY=

# -----------------------------------------------------------------------------
# LLM Settings
# -----------------------------------------------------------------------------

# Default models per provider
GEMINI_DEFAULT_MODEL=gemini-3-pro-preview
OPENAI_DEFAULT_MODEL=gpt-5.2
ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-5-20250929

# Gemini grounding option
GEMINI_GROUNDING_ENABLED=true

# Retry configuration
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY_SECONDS=1

# -----------------------------------------------------------------------------
# Database - PostgreSQL (Docker Compose)
# -----------------------------------------------------------------------------

POSTGRES_USER=seo
POSTGRES_PASSWORD=seo_password
POSTGRES_DB=seo_articles
POSTGRES_PORT=5432

# Admin DB (for multi-tenant management)
ADMIN_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/seo_gen_admin

# Tenant DB pool configuration
TENANT_DB_POOL_SIZE=5
TENANT_DB_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Storage - MinIO (Step 5)
# -----------------------------------------------------------------------------

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=seo-artifacts
MINIO_USE_SSL=false
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# -----------------------------------------------------------------------------
# Temporal (Step 6-7)
# -----------------------------------------------------------------------------

TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_UI_PORT=8080
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=seo-article-generation

# -----------------------------------------------------------------------------
# Tools API Keys (Step 3)
# -----------------------------------------------------------------------------

# SERP API (Google search results)
SERP_API_KEY=

# Tavily API (web search)
TAVILY_API_KEY=

# Google Ads API (Keyword Planner - search volume & related keywords)
# All 5 credentials are required when USE_MOCK_GOOGLE_ADS=false.
# Get Developer Token: https://developers.google.com/google-ads/api/docs/get-started/dev-token
# Get OAuth credentials: Google Cloud Console > APIs & Services > Credentials
# Generate Refresh Token: python scripts/google_ads_auth.py
# Customer ID: Google Ads account number (with or without hyphens)
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# Google Ads API mock mode
# true: Use mock data (no credentials required, for development/testing)
# false: Use real Keyword Planner API (all 5 credentials above required)
USE_MOCK_GOOGLE_ADS=true

# -----------------------------------------------------------------------------
# API Server (Step 7)
# -----------------------------------------------------------------------------

API_HOST=0.0.0.0
API_PORT=8000

# JWT configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Frontend (Step 7)
# -----------------------------------------------------------------------------

UI_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------

RATE_LIMIT_API_REQUESTS_PER_MIN=100
RATE_LIMIT_CONCURRENT_RUNS=3
RATE_LIMIT_DAILY_RUN_CREATIONS=50

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------

LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Development / Testing
# -----------------------------------------------------------------------------

# Mock LLM mode (set true for testing without API keys)
USE_MOCK_LLM=false

# Mock pack ID (used when USE_MOCK_LLM=true)
MOCK_PACK_ID=

# Environment
ENVIRONMENT=development
